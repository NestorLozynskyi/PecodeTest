<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <ImageView
        android:id="@+id/center_ellipse"
        android:layout_width="@dimen/ellipse_size"
        android:layout_height="@dimen/ellipse_size"
        android:src="@drawable/ic_center_ellipse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.23"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="17dp"
        android:text="@string/create_new_notification"
        android:textSize="@dimen/btn_push_text_size"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/center_ellipse"
        app:layout_constraintBottom_toBottomOf="@+id/center_ellipse"
        app:layout_constraintStart_toStartOf="@+id/center_ellipse"
        app:layout_constraintEnd_toEndOf="@+id/center_ellipse"/>

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.94"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:src="@drawable/ic_ellipse_plus"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_minus"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:src="@drawable/ic_ellipse_minus"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/num_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/num_fragment_text_size"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        tools:ignore="HardcodedText" />

    <!--<EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/input"
        android:background="@color/black"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>